<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_album_share_topbar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/title_bg"
        android:gravity="center_vertical" >

        <ImageButton
            android:id="@+id/ib_album_share_back"
            android:layout_width="@dimen/back_width"
            android:layout_height="@dimen/back_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/back_margin_left"
            android:background="@drawable/back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="编辑标题"
            android:textColor="#626262"
            android:textSize="@dimen/title_textSize" />

        <Button
            android:id="@+id/ib_album_share_save"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_white_selector"
            android:gravity="center"
            android:text="保存"
            android:textColor="#3dcad2" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/iv_album_share"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:alpha="0.4"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:id="@+id/et_album_share_title"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/album_et_height"
                android:layout_marginLeft="@dimen/album_et_margin_left"
                android:layout_marginRight="@dimen/album_et_margin_right"
                android:layout_marginTop="@dimen/album_et_margin_top"
                android:alpha="0.7"
                android:background="@drawable/et_bg"
                android:ems="10"
                android:gravity="start"
                android:hint="对照片进行一下描述吧，20只以内哦~"
                android:maxLength="20"
                android:padding="5dip"
                android:textColor="#000000"
                android:textSize="@dimen/album_et_textSize" >

                <requestFocus />
            </EditText>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/et_album_share_title"
                android:layout_below="@id/et_album_share_title"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cb_album_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_share_checkbox"
                    android:button="@null"
                    android:checked="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="同时分享到我的班级"
                    android:textColor="#a0a0a0"
                    android:textSize="15sp" >
                </TextView>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
    </LinearLayout>
