<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_f8f8f8"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/view_item_mypic_time_area"
        android:layout_width="@dimen/photo_time_allwidth"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/view_item_mypic_tv_time1"
            android:layout_width="@dimen/photo_time_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/photo_time_margin_left"
            android:singleLine="true"
            android:text="2013-10"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/view_item_mypic_tv_time2"
            android:layout_width="@dimen/photo_time_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_item_mypic_tv_time1"
            android:layout_marginLeft="@dimen/photo_time_margin_left"
            android:singleLine="true"
            android:text="星期六"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/adapter_mytopic_timeline"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="left"
        android:layout_marginLeft="92.0dip"
        android:scaleType="fitXY"
        android:src="@drawable/bitmap_mypic_line" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="75.0dip" >

        <TextView
            android:id="@+id/view_item_mypic_content_tv_time3"
            style="@style/imageview_big_dot"
            android:layout_width="34.0dip"
            android:layout_height="34.0dip"
            android:background="@drawable/bg_photo_time_dot"
            android:gravity="center"
            android:text="13"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/view_item_mypic_content_body"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/photo_time_allwidth"
        android:orientation="vertical"
        android:paddingBottom="10.0dip"
        android:paddingTop="10.0dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:background="@drawable/selector_photo_list" >

            <ImageView
                android:id="@+id/view_item_mypic_iv_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/view_item_mypic_tv_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/view_item_mypic_iv_photo"
                android:lineSpacingExtra="5dp"
                android:maxLines="2"
                android:paddingRight="5dp"
                android:textColor="#626262"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>