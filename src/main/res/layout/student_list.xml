<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_handle_album_topbar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/title_bg" >

        <ImageButton
            android:id="@+id/ib_student_list_back"
            android:layout_width="@dimen/back_width"
            android:layout_height="@dimen/back_height"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/back_margin_left"
            android:background="@drawable/back_selector" />

        <TextView
            android:id="@+id/tv_student_titile_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/student_list_title"
            android:textColor="#626262"
            android:textSize="@dimen/title_textSize" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_grade_chat_tea_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_student_top_content"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/private_chat"
            android:gravity="center"
            android:text="跟班上其他家长交流一下吧"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <GridView
        android:id="@+id/gv_student"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_f8f8f8"
        android:columnWidth="100dp"
        android:gravity="center"
        android:listSelector="@android:color/transparent"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="4dp" />

</LinearLayout>