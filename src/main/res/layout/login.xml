<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8f8f8"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/blue_title_bg" >

        <TextView
            android:id="@+id/tv_grade_chat_top_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="登录i摩比 "
            android:textColor="#ffffff"
            android:textSize="@dimen/title_textSize" />

        <TextView
            android:id="@+id/ib_login_log_on"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_blue_selector"
            android:gravity="center"
            android:text="登录"
            android:textColor="#3dcad2"
            android:textSize="@dimen/button_textSize" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_blue"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/login_ll_padding_leftandright" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_rl_margin_top" >

            <EditText
                android:id="@+id/et_login_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_et_height"
                android:background="@drawable/login_edit_bg"
                android:hint="请输入学员卡号/教师帐号"
                android:maxLines="1"
                android:paddingLeft="@dimen/login_et_padding_left"
                android:paddingRight="@dimen/login_et_padding_right"
                android:singleLine="true"
                android:textSize="@dimen/login_et_textSize" />

            <ImageView
                android:layout_width="@dimen/login_iv_width"
                android:layout_height="@dimen/login_iv_height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/login_username" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_iv_height" >

            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_et_height"
                android:background="@drawable/login_edit_bg"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="@dimen/login_et_padding_left"
                android:paddingRight="@dimen/login_et_padding_right"
                android:textSize="@dimen/login_et_textSize" />

            <ImageView
                android:layout_width="@dimen/login_iv_width"
                android:layout_height="@dimen/login_iv_height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/login_password" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/login_ll_margin_bottom"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_login_bottom1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright © 2010-2014 摩比思维馆"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_login_bottom2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Rights Reserved"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>