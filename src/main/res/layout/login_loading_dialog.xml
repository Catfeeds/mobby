<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/login_loading_width"
    android:layout_height="@dimen/login_loading_height"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp" >

    <ProgressBar
        android:id="@+id/iv_loading_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@android:style/Widget.ProgressBar.Inverse"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/login_loading"
        android:indeterminateOnly="true" />

    <TextView
        android:id="@+id/tv_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/login_dialog_margin_top"
        android:textColor="#ffffff"
        android:textSize="@dimen/login_dialog_textSize" />

</LinearLayout>