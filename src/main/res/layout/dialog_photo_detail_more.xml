<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical"
    android:padding="20dp" >

    <Button
        android:id="@+id/dialog_photo_detail_more_btn_share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_dialog_blue"
        android:text="分享到班级"
        android:textColor="#035d67"
        android:textSize="18sp" />

    <Button
        android:id="@+id/dialog_photo_detail_more_btn_save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_btn_dialog_blue"
        android:text="保存到手机"
        android:textColor="#035d67"
        android:textSize="18sp" />

    <Button
        android:id="@+id/dialog_photo_detail_more_btn_delete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_btn_dialog_red"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/dialog_photo_detail_more_btn_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_btn_dialog_gray"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>