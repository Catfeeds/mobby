<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_f8f8f8"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/blue_title_bg"
        android:gravity="center"
        android:text="我"
        android:textColor="#ffffff"
        android:textSize="@dimen/title_textSize" />

    <RelativeLayout
        android:id="@+id/ll_setting_change_photo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/setting_margin_left"
        android:layout_marginRight="@dimen/setting_margin_right"
        android:layout_marginTop="@dimen/setting_margin_top"
        android:background="@drawable/change_photo_selector" >

        <com.up72.mobby.views.FilletImageView
            android:id="@+id/iv_setting_photo"
            android:layout_width="@dimen/setting_photo_heightAndWidth"
            android:layout_height="@dimen/setting_photo_heightAndWidth"
            android:layout_marginLeft="@dimen/setting_photo_margin_left"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_setting_photo"
            android:layout_alignTop="@id/iv_setting_photo"
            android:layout_marginLeft="@dimen/setting_name_margin_left"
            android:layout_toRightOf="@id/iv_setting_photo"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_settting_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/setting_name"
                android:textColor="#000000"
                android:textSize="@dimen/setting_item_textSize" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="更换头像"
                    android:textColor="#000000"
                    android:textSize="@dimen/setting_item_textSize" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/setting_jiantou_margin_right"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/setting_icon_jiantou" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_setting_birthday"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/setting_birthday"
                android:textColor="#000000"
                android:textSize="@dimen/setting_item_textSize" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/setting_margin_left"
        android:layout_marginRight="@dimen/setting_margin_right"
        android:layout_marginTop="@dimen/setting_margin_top"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_setting_mypic"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_change_photo_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/setting_item_padding" >

                <ImageView
                    android:layout_width="@dimen/setting_icon_size"
                    android:layout_height="@dimen/setting_icon_size"
                    android:src="@drawable/setting_photo" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.0"
                    android:text="我的相册"
                    android:textColor="#000000"
                    android:textSize="@dimen/setting_item_textSize" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/setting_jiantou_margin_right"
                    android:src="@drawable/setting_icon_jiantou" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/setting_item_divider" />

            <LinearLayout
                android:id="@+id/ll_setting_tickling"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_feedback_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/setting_item_padding" >

                <ImageView
                    android:layout_width="@dimen/setting_icon_size"
                    android:layout_height="@dimen/setting_icon_size"
                    android:src="@drawable/setting_fankui" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.0"
                    android:text="问题反馈"
                    android:textColor="#000000"
                    android:textSize="@dimen/setting_item_textSize" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/setting_jiantou_margin_right"
                    android:src="@drawable/setting_icon_jiantou" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/setting_item_divider" />

            <LinearLayout
                android:id="@+id/ll_setting_download"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_feedback_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/setting_item_padding" >

                <FrameLayout
                    android:layout_width="@dimen/setting_icon_size"
                    android:layout_height="@dimen/setting_icon_size" >

                    <ImageView
                        android:id="@+id/reflush_pic_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/setting_reflush" />

                    <ProgressBar
                        android:id="@+id/reflush_pic_progressbar"
                        style="@android:style/Widget.ProgressBar.Inverse"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:indeterminateBehavior="repeat"
                        android:indeterminateDrawable="@drawable/setting_downing"
                        android:indeterminateOnly="true"
                        android:visibility="gone" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.0" >

                    <TextView
                        android:id="@+id/setting_tv_version_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="已经是最新版本"
                        android:textColor="#000000"
                        android:textSize="@dimen/setting_item_textSize"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_setting_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="正在更新,请稍候..."
                        android:textColor="#3ab763"
                        android:textSize="@dimen/setting_item_textSize"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_setting_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:text="0%"
                        android:textColor="#3ab763"
                        android:textSize="@dimen/setting_item_textSize"
                        android:visibility="gone" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/setting_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/setting_jiantou_margin_right"
                    android:src="@drawable/setting_icon_jiantou"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/setting_item_divider" />

            <LinearLayout
                android:id="@+id/ll_setting_delete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_delete_chatrecord_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/setting_item_padding" >

                <ImageView
                    android:layout_width="@dimen/setting_icon_size"
                    android:layout_height="@dimen/setting_icon_size"
                    android:src="@drawable/setting_delete" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.0"
                    android:text="清空聊天记录"
                    android:textColor="#000000"
                    android:textSize="@dimen/setting_item_textSize" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/setting_jiantou_margin_right"
                    android:src="@drawable/setting_icon_jiantou" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/ib_setting_exit"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_bt_exit_height"
            android:layout_marginTop="@dimen/setting_bt_exit_margin_top"
            android:background="@drawable/setting_exit_selector"
            android:gravity="center"
            android:padding="5dp"
            android:text="退出登录"
            android:textColor="#ffffff"
            android:textSize="@dimen/setting_bt_textSize" />
    </LinearLayout>

</LinearLayout>