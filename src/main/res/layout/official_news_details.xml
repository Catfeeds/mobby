<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8f8f8"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/title_bg" >

        <ImageButton
            android:id="@+id/ib_offical_details_back"
            android:layout_width="@dimen/back_width"
            android:layout_height="@dimen/back_height"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/back_margin_left"
            android:background="@drawable/back_selector" />

        <TextView
            android:id="@+id/tv_offical_details_top_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="摩比思维馆"
            android:textColor="#626262"
            android:textSize="@dimen/title_textSize" />

        <TextView
            android:id="@+id/ib_offical_details_comment"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_white_selector"
            android:gravity="center"
            android:text="评论"
            android:textColor="#3dcad2" />

        <TextView
            android:id="@+id/tv_offical_details_warn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/news_number_bg"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:textColor="#ffffff"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_offical_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:textColor="#000000"
        android:textSize="20sp" />

    <WebView
        android:id="@+id/wv_offical_news_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>